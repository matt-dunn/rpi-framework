	<logging>
		<!-- NOTE: xdebug extension MUST be enabled to build code coverage report -->
		<log
			type="coverage-html"
			target="logs/coverage"
			charset="UTF-8"
			yui="true"
			highlight="true"
			lowUpperBound="35"
			highLowerBound="70"
		/>

		<!--
		<log
			type="coverage-clover"
			target="logs/clover.xml"
		/>
		-->

		<log
			type="testdox-html"
			target="logs/testdox.html"
		/>

		<log
			type="junit"
			target="logs/junit_php_testresults.xml"
			logIncompleteSkipped="false"
		/>
	</logging>

