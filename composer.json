{
    "name": "rpi/framework",
    "type": "library",
    "description": "RPI Core Framework",
    "keywords": [],
    "homepage": "http://packages.red-pixel.co.uk/",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Dunn",
            "email": "matt@red-pixel.co.uk"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.red-pixel.co.uk/"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "ext-mcrypt": "*",
        "ext-apc": "*",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-simplexml": "*",
        "ext-xml": "*",
        "ext-xsl": "*",
        "psr/log": "~1.0",
        "rpi/schemas": "dev-master",
        "rpi/jquery": "1.*"
    },
    "require-dev": {
        "firephp/firephp-core": "dev-master",
        "rpi/test-harness": "dev-master"
    },
    "suggest": {
        "ext-gd": "May be used by other libraries to manipulate images",
        "ext-xslcache": "Boost performance of XSL transformations"
    },
    "target-dir": "RPI/Framework",
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": {"RPI\\Framework": ""}
    }
}
